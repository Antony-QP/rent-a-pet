<div class="d-flex">
  <div class="container w-50">
    <h1>Pets in Amsterdam</h1>
    <% @pets.each do |pet| %>
    <div class="row">
      <div class="col-lg-12 col-md-12">
        <div class="card mb-2">
          <div class="card-body d-flex">
            <img class="cd-img w-25" src="..." />
            <div class="w-100">
              <div class="d-flex justify-content-between">
                <span
                  ><i class="fas fa-map-marker-alt"></i><%= pet.location
                  %></span
                >
                <i class="far fa-heart"></i>
              </div>
              <div class="border-bottom">
                <%= link_to pet_path(pet) do %> <span class="font-weight-bold text-dark"><%= pet.name %> - <%= pet.breed %></span>
              </div>
              <% end %>
              <div>
                <p><%= pet.description %></p>
              </div>
              <div class="price d-flex justify-content-end w-100">
                <p><%= pet.price %> Euro / Day</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="map w-50 sticky-top">
    <%= image_tag("map.png", style: 'height:100vh;width:100%;') %>
  </div>
</div>
