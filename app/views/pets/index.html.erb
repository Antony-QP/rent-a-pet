<div class="d-flex">
  <div class="container w-50">
    <div class="col-lg-12">
      <h1>Pet Results...</h1>
      <% @pets.each do |pet| %>
      <div class="row">
        <div class="card mb-2 w-100">
          <div class="card-body d-flex">
            <!-- <img class="cd-img w-25" src="..." /> -->
            <div class="pet-card-img cd-img w-50 mr-2 rounded" style="background-image: url('<%= cl_image_path (pet.photo.key), crop: :fill %>')"></div>
            <div class="w-100">
              <div class="d-flex justify-content-between">
                <span
                  ><i class="fas fa-map-marker-alt text-primary mr-2"></i><%= pet.location
                  %></span
                >
                <a href="#"><i class="far fa-heart text-primary"></i></a>
              </div>
              <div class="border-bottom">
                <br>
                <%= link_to pet_path(pet) do %>
                <span class="font-weight-bold text-dark"
                  ><%= pet.name %> - <%= pet.breed %></span
                >
              </div>
              <% end %>
              <div>
                <p><%= pet.description %></p>
              </div>
              <div class="price d-flex justify-content-end w-100">
                <p><%= pet.price %>â‚¬ / Day</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="sticky-top" id="map" style="width: 50%; height: 100vh; position:sticky;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
