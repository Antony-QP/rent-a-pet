<div class='navbar-lewagon'>
  <div class='container-home-daan'>
    <div class='home-icon'>
      <div><i class="fas fa-paw  fa-2x" ></i>
      </div>
      <div class='home-navbar-text'><h3><strong>Rent-a-pet</strong></h3></div>
    </div>
    <div class='home-navbar-menu'>
      <div class='home-owner'><h5><%= link_to "See all pets", pets_path%></h5></div>
      <div class='home-owner'><h5><%= link_to "Become an owner", new_pet_path%></h5> </div>
      <div><i class="fas fa-user-circle fa-2x"></i></div>
    </div>
  </div>
</div>

<div class="d-flex">
  <div class="container w-50">
    <div class="col-lg-12">
      <h1>Pets in Amsterdam</h1>
      <% @pets.each do |pet| %>
      <div class="row">
        <div class="card mb-2 w-100">
          <div class="card-body d-flex">
            <!-- <img class="cd-img w-25" src="..." /> -->
            <div class="pet-card-img cd-img w-50 mr-2 rounded" style="background-image: url('<%= cl_image_path (pet.photo.key), crop: :fill %>')"></div>
            <div class="w-100">
              <div class="d-flex justify-content-between">
                <span
                  ><i class="fas fa-map-marker-alt"></i><%= pet.location
                  %></span
                >
                <i class="far fa-heart"></i>
              </div>
              <div class="border-bottom">
                <%= link_to pet_path(pet) do %>
                <span class="font-weight-bold text-dark"
                  ><%= pet.name %> - <%= pet.breed %></span
                >
              </div>
              <% end %>
              <div>
                <p><%= pet.description %></p>
              </div>
              <div class="price d-flex justify-content-end w-100">
                <p><%= pet.price %> Euro / Day</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="map w-50 sticky-top">
    <%= image_tag("map.png", style: 'height:100vh;width:100%;') %>
  </div>
</div>
