
<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title"><%= @pet.name %> - <%= @pet.breed %></h5>
    <h6 class="card-text"><medium><%= @pet.location %></medium></h6>
    <img class="card-img" style="width: auto; height: 250px" src="https://i.guim.co.uk/img/media/fe1e34da640c5c56ed16f76ce6f994fa9343d09d/0_174_3408_2046/master/3408.jpg?width=620&quality=45&auto=format&fit=max&dpr=2&s=064680b85e72644d9cc2e69e2763c541" alt="Card image cap">
    <p class="card-text">Description: <%= @pet.description%></p>
    <p class="card-text">Price: <%= @pet.price%> euro </p>
    <%= link_to "Delete", pet_path(@pet), class: "btn btn-primary btn-sm", method: :delete, data: { confirm: "Delete?" }%>
  </div>
</div>
