<div class='navbar-lewagon'>
  <div class='container-home-daan'>
    <div class='home-icon'>
      <%= link_to root_path do  %>
      <i class="fas fa-paw  fa-2x" ></i>
      <% end %>
      <div class='home-navbar-text'><h3><strong>Rent-a-pet</strong></h3></div>
    </div>
    <div class='home-navbar-menu'>
      <div class='home-owner'><h6><%= link_to "See all pets", pets_path%></h6></div>
      <div class='home-owner'><h6><%= link_to "Become an owner", new_pet_path%></h6> </div>
      <div class="d-flex justify-content-center">
        <%= form_tag pets_path, method: :get do %>
        <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Look for a pet..."
        %>
      <% end %>
    </div>
      <div class="nav-item dropdown">
        <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://i.pinimg.com/originals/09/a5/c8/09a5c8eb3920af9cf2774c009a7b0d54.jpg" width="43" height="46"/>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if current_user %>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <%= link_to "Dashboard", bookings_path, class: "dropdown-item" %>
        <% else  %>
        <%= link_to "Log in", new_user_session_path, class: "dropdown-item" %>
        <%= link_to "Sign up", new_user_registration_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
